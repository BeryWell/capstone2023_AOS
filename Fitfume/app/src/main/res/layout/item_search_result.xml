<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".item_search_result">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_result_whole_cl"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.862"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="1:0.1496"
        android:layout_marginBottom="13.6dp"
        android:background="@drawable/login_background_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/search_result_branch_tv"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.193"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.17"
            android:text="Dior"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/pretendard_light"
            android:textColor="@color/black"
            android:lineSpacingExtra="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/search_result_title_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.65"
            app:layout_constraintHeight_percent="0.26"
            android:text="미스 디올 블루밍 부케 오드 뚜왈렛"
            android:fontFamily="@font/pretendard_medium"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"
            android:layout_marginTop="2dp"
            android:autoSizeStepGranularity="1dp"
            android:textColor="@color/black"
            android:lineSpacingExtra="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/search_result_branch_tv"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/search_result_star_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHeight_percent="0.086"
            android:numStars="5"
            android:isIndicator="true"
            android:progressTint="@color/star_yellow"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintTop_toTopOf="@+id/search_result_title_tv"
            app:layout_constraintBottom_toBottomOf="@+id/search_result_title_tv"
            app:layout_constraintEnd_toStartOf="@+id/search_result_review_count_tv"/>

        <TextView
            android:id="@+id/search_result_review_count_tv"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHeight_percent="0.26"
            android:layout_height="0dp"
            android:text="( 10+ )"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="12dp"
            android:layout_marginEnd="7dp"
            android:textColor="@color/review_perfume_name"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintTop_toTopOf="@+id/search_result_star_rb"
            app:layout_constraintBottom_toBottomOf="@+id/search_result_star_rb"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>