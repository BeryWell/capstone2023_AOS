<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendQ1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recommend_context_cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.692">

        <TextView
            android:id="@+id/recommend_question_count_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="18dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/pretendard_semibold"
            android:text="@string/recommend_question_one"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.543"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.731" />

        <TextView
            android:id="@+id/recommend_question_detail_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/recommend_question_one_detail"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.343"
            app:layout_constraintWidth_percent="0.888" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recommend_man_cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.389"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:elevation="2dp"
        android:background="@drawable/login_background_drawable"
        app:layout_constraintTop_toBottomOf="@+id/recommend_context_cl"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recommend_man_image_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/recommend_question_one_man"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/recommend_one_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.095"
            android:autoSizeMaxTextSize="16dp"
            android:textColor="@color/black"
            android:text="@string/man"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center_vertical|center_horizontal"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeStepGranularity="1dp"
            app:layout_constraintTop_toBottomOf="@+id/recommend_man_image_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recommend_two_cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.389"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="18dp"
        android:elevation="2dp"
        android:background="@drawable/login_background_drawable"
        app:layout_constraintTop_toBottomOf="@+id/recommend_context_cl"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recommend_two_image_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/recommend_question_one_woman"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/recommend_two_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.095"
            android:autoSizeMaxTextSize="16dp"
            android:textColor="@color/black"
            android:text="@string/woman"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center_vertical|center_horizontal"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeStepGranularity="1dp"
            app:layout_constraintTop_toBottomOf="@+id/recommend_two_image_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recommend_preview_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/preview"
        app:layout_constraintWidth_percent="0.389"
        app:layout_constraintHeight_percent="0.068"
        android:elevation="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/main_Color"
        android:fontFamily="@font/pretendard_semibold"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="15dp"
        android:background="@drawable/recomment_white_background_btn_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recommend_next_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/next"
        app:layout_constraintWidth_percent="0.389"
        app:layout_constraintHeight_percent="0.068"
        android:elevation="2dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_semibold"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="15dp"
        android:background="@drawable/recommend_main_color_btn_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>