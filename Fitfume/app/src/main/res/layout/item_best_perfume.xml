<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/best_perfume_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        android:background="@drawable/login_background_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/perfume_count_tv"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.07"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            android:text="1"
            android:includeFontPadding="false"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"
            android:lineSpacingExtra="7dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginStart="5dp"
            android:autoSizeStepGranularity="0.5dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/best_perfume_iv"/>

        <TextView
            android:id="@+id/perfume_brand_tv"
            android:layout_width="match_parent"
            app:layout_constraintWidth_percent="0.134"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            android:text="Diro"
            android:autoSizeMaxTextSize="7dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeStepGranularity="1dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/best_perfume_iv"/>


        <ImageView
            android:id="@+id/best_perfume_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintHeight_percent="0.774"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfume_count_tv"/>

        <TextView
            android:id="@+id/perfume_title_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="7dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="미스 디올 블루밍 부케 오 드 뚜왈렛"
            android:layout_marginVertical="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/best_perfume_iv"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>